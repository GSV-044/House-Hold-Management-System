@model MembersRegistration.Models.SignIn
@{
    ViewBag.Title = "SignIn";
}
<head>
    <link href="~/Content/signin.css" rel="stylesheet" />
</head>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-offset-3 col-md-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-3 btn-area signin-label">
                        Sign in
                    </div>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2 asterisk" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "User Name" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 asterisk" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-offset-2 col-md-2">
                        <label>
                            <input type="checkbox" checked="checked" name="remember"> Remember me
                        </label>
                    </div>
                </div>
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 success-label">
                            <label>@ViewBag.SuccessMessage</label>
                        </div>
                    </div>

                }


                @if (ViewBag.DuplMessage != null)
                {
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-3 danger">
                            <label class="label-danger">@ViewBag.DuplMessage</label>
                        </div>
                    </div>
                }


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-3 btn-area">

                        <button type="Submit" value="Submit" title="Signin" class="btn btn-primary signin-btn">Sign in</button>

                    </div>
                </div>


                <div>
                    <div class="col-md-offset-2 col-md-3 btn-area">
                        @Html.ActionLink("New user register here", "Create", "UserRegistrations")
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}



