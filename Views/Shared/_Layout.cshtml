@using MembersRegistration.Models
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Household Management System</title>
    <link href="~/Content/SharedLayout.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/Scripts/CustomQuery.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar bg-primary navbar-fixed-top justify-content-between">

        <div class="navbar-brand">
            @if (Session["UserId"] != null)
            {
                <a href="@Url.Action("Admin", "UserRegistrations")" class="back-btn">
                    <img src="~/Infrastructure/home.png" alt="Back" title="Home" class="home-icon" />
                </a>
            }

            @Html.ActionLink("Household Management System", "SignIn", "UserRegistrations", new { area = "" }, new { @class = "app-name" })


        </div>


        <div class="navbar-right content-right">
            @if (Session["UserId"] != null)
            {

                <h4> Welcome @Session["Username"]! </h4>
                <a class="Logout-btn" href="/UserRegistrations/SignIn">Logout</a>
            }


        </div>





    </nav>
    <div class="container body-content">
        <section class="content-wrapper main-content ">
            @RenderBody()
        </section>
    </div>



    <div class="footer-area ">

        <footer class="footer">
            <p>&copy; @DateTime.Now.Year Mindtree</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>

            </html>


         
